<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@raw/home"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:padding="32dp"
    tools:context=".fragments.Homefrag">

    <TextView
        android:id="@+id/home_userGreeting"
        android:layout_height="300dp"
        android:gravity="center"
        android:shadowColor="#020202"
        android:shadowDx="0.5"
        android:shadowDy="0.5"
        android:shadowRadius="15"
        android:textColor="@color/white"
        android:textIsSelectable="false"
        android:textSize="50sp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:text="@string/home_user_greeting"
        android:paddingBottom="24dp"
        android:fontFamily="sans-serif-medium"
        tools:text="Hello, Dummy User ðŸ‘‹" />

    <Button
        android:id="@+id/favoriteBtn"
        android:text="@string/favorite_games_btn"
        android:layout_width="300dp"
        android:layout_height="48dp"
        android:elevation="6dp"
        android:textSize="20sp"
        android:textAllCaps="false"
        android:layout_marginHorizontal="2dp"
        android:background="@drawable/login_screen_btn"
        android:backgroundTint="#E91E63"
        android:layout_marginVertical="5dp"
        android:fontFamily="sans-serif" />

    <Button
        android:id="@+id/exploreBtn"
        android:text="@string/explore_games_btn"
        android:layout_width="300dp"
        android:layout_height="48dp"
        android:elevation="6dp"
        android:textSize="20sp"
        android:textAllCaps="false"
        android:layout_marginHorizontal="2dp"
        android:background="@drawable/login_screen_btn"
        android:backgroundTint="#3F51B5"
        android:layout_marginVertical="5dp"
        android:fontFamily="sans-serif"  />

    <Button
        android:id="@+id/friendsBtn"
        android:text="@string/friends_btn"
        android:layout_width="300dp"
        android:layout_height="48dp"
        android:elevation="6dp"
        android:textSize="20sp"
        android:textAllCaps="false"
        android:layout_marginHorizontal="2dp"
        android:background="@drawable/login_screen_btn"
        android:backgroundTint="#FF5722"
        android:layout_marginVertical="5dp"
        android:fontFamily="sans-serif" />

</LinearLayout>
